<p id="notice"><%= notice %></p>

<h1>Все товары</h1>

<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Цена</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Просмотреть', item %></td>
        <td><%= link_to 'Редактировать', edit_item_path(item) %></td>
        <td><%= link_to 'Удалить', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить товар', new_item_path %>
